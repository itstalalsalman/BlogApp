@model UserModel

@* User Delete View with Dark Theme *@

@{
    var containerDivClass = "container";
}
@{
    ViewData["Title"] = "User Delete";
}

<div class="@containerDivClass">
    <h1 class="text-white">@ViewData["Title"]</h1>
    <hr class="border-light" />
</div>

@if (Model is not null)
{
    <div class="@containerDivClass">
        @if (TempData["Message"] is not null)
        {
            <p class="text-danger">
                @TempData["Message"]
            </p>
        }
        <h3 class="text-danger">Are you sure you want to delete?</h3>
        <hr class="border-light" />
        <div class="row mb-3">
            <div class="col-2 fw-bold text-light">
                @Html.DisplayNameFor(model => model.UserName)
            </div>
            <div class="col-10 text-white">
                @Html.DisplayFor(model => model.UserName)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 fw-bold text-light">
                @Html.DisplayNameFor(model => model.Password)
            </div>
            <div class="col-10 text-white">
                @Html.DisplayFor(model => model.Password)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 fw-bold text-light">
                @Html.DisplayNameFor(model => model.IsActive)
            </div>
            <div class="col-10 text-white">
                @Html.DisplayFor(model => model.IsActive)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 fw-bold text-light">
                @Html.DisplayNameFor(model => model.RoleName)
            </div>
            <div class="col-10 text-white">
                @Html.DisplayFor(model => model.RoleName)
            </div>
        </div>

